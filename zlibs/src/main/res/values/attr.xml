<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="WatermarkView">
        <attr name="markViewColor" format="color" />
        <attr name="markViewTextSize" format="dimension" />
        <attr name="markViewText" format="string" />
        <attr name="markViewAngle" format="float" />
    </declare-styleable>

    <declare-styleable name="CircleProgressView">
        <attr name="centerColor" format="color" />
        <attr name="progressRingSize" format="float" />
        <attr name="progressBgColor" format="color" />
        <attr name="progressColor" format="color" />
        <attr name="proTextColor" format="color" />
        <attr name="proTextShow" format="boolean" />
        <attr name="proTextSize" format="dimension" />
        <attr name="proValue" format="float" />
        <attr name="progressMax" format="integer" />
        <attr name="infoTextColor" format="color" />
        <attr name="infoTextSize" format="dimension" />
        <attr name="infoTextString" format="string" />
        <attr name="infoTextShow" format="boolean" />
        <attr name="progressColorStart" format="color" />
        <attr name="progressColorEnd" format="color" />
        <attr name="proInfiniteMode" format="boolean" />
    </declare-styleable>

    <declare-styleable name="LabelTextView">
        <attr name="labelString" format="string" />
        <attr name="labelPlace" format="boolean" />
        <attr name="labelColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CustomFontTextView">
        <attr name="fontType" format="string" />
    </declare-styleable>

    <declare-styleable name="SettingView">
        <!--标题-->
        <attr name="titleText" format="string" />
        <!--标题字体大小-->
        <attr name="titleSize" format="dimension" />
        <!--标题字体颜色-->
        <attr name="titleColor" format="color|reference" />
        <!--标题-->
        <attr name="subTitleText" format="string" />
        <!--副标题字体大小-->
        <attr name="subTitleSize" format="dimension" />
        <!--副标题字体颜色-->
        <attr name="subTitleColor" format="color|reference" />
        <!--主标题和副标题的间距-->
        <attr name="titlePadding" format="dimension" />

        <!--标题距离左边开始图标的距离-->
        <attr name="titleMarginMenuIcon" format="dimension" />
        <!--设置项的图标-->
        <attr name="menuIconSrc" format="reference" />
        <!--设置项图标对其方式-->
        <attr name="menuIconGravity" format="enum">
            <!--顶部和主标题对其-->
            <enum name="top" value="1" />
            <!--垂直居中-->
            <enum name="center_vertical" value="2" />
            <!--底部 和副标题对其-->
            <enum name="bottom" value="3" />
        </attr>

        <attr name="android:paddingTop" format="dimension" />
        <attr name="android:paddingBottom" format="dimension" />
        <attr name="android:paddingStart" format="dimension" />

        <!--右侧图标-->
        <attr name="msgImgIcon" format="reference" />
        <!--右侧文字-->
        <attr name="msgText" format="string" />
        <!--右侧文字大小-->
        <attr name="msgTextSize" format="dimension" />
        <!--右侧文字颜色-->
        <attr name="msgTextColor" format="color|reference" />
        <!--右侧文字和图标间距-->
        <attr name="msgImgPaddingText" format="dimension" />
    </declare-styleable>

    <declare-styleable name="SettingTabControl">
        <!-- 菜单项 设置数组资源 -->
        <attr name="tabItemsTexts" format="reference" />
        <!-- 菜单项 设置数组资源 -->
        <attr name="tabItemsTags" format="reference" />
        <!-- 菜单项 设置图标数组资源 -->
        <attr name="tabItemIcons" format="reference" />
        <!-- 菜单每项的文字大小 -->
        <attr name="itemTextSize" format="dimension" />
        <!-- 菜单每项的文字颜色 单色-->
        <attr name="itemTextColor" format="color|reference" />
        <!-- 菜单每项的文字颜色 各种状态的颜色-->
        <attr name="itemTextColorStateList" format="reference" />
        <!-- 单个菜单的背景 -->
        <attr name="itemBackground" format="reference" />
        <!-- 每个item的间距 -->
        <attr name="itemMargin" format="dimension" />
        <!-- 默认选中项 -->
        <attr name="itemDefCheck" format="integer" />
        <!-- item宽，默认为wrap_parent -->
        <attr name="itemWidth" format="dimension">
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <!-- item高，默认为wrap_parent -->
        <attr name="itemHeight" format="dimension">
            <enum name="match_parent" value="-1" />
            <enum name="wrap_content" value="-2" />
        </attr>
        <!-- item文字和图标边距 -->
        <attr name="itemDrawablePadding" format="dimension|integer" />
        <!-- item对齐方式 -->
        <attr name="itemGravity">
            <flag name="left" value="0x03" />
            <flag name="right" value="0x05" />
            <flag name="center" value="0x11" />
            <flag name="start" value="0x00800003" />
            <flag name="end" value="0x00800005" />
            <flag name="center_vertical" value="0x10" />
            <flag name="center_horizontal" value="0x01" />
        </attr>
        <!-- item图标显示位置 -->
        <attr name="itemDrawableLocation" format="enum">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>

    </declare-styleable>

    <declare-styleable name="PageIndicator">
        <attr name="itemTotal" format="integer" />
        <attr name="itemColorNormal" format="color|reference" />
        <attr name="itemColorCurrent" format="color|reference" />
        <attr name="itemRadiusNormal" format="float" />
        <attr name="itemRadiusCurrent" format="float" />
        <attr name="itemSpace" format="float" />
    </declare-styleable>

    <declare-styleable name="ProgressView">
        <!-- 进度条宽度 -->
        <attr name="progressViewSize" format="dimension|integer" />
        <!-- 进度条渐变色 -->
        <attr name="progressViewGradient" format="string" />
        <!-- 进度条背景色 -->
        <attr name="progressViewBgColor" format="color" />
        <!-- 进度条颜色 -->
        <attr name="progressViewColor" format="color" />
        <!-- 环形进度条时是否开启无限循环 -->
        <attr name="progressViewIsLoop" format="boolean" />
        <!-- 环形进度条时是否开启无限循环 -->
        <attr name="progressViewValue" format="float" />
        <!-- 是否顺时针旋转；当进度条为圆环进度时配置有效 -->
        <attr name="progressViewIsClockwise" format="boolean" />
        <!-- 进度条样式 圆环、水平、垂直 -->
        <attr name="progressViewStyle" format="enum">
            <enum name="CIRCLE" value="0" />
            <enum name="HORIZONTAL" value="1" />
            <enum name="VERTICAL" value="2" />
        </attr>
        <!-- 进度条绘制时的笔头样式 圆形、矩形 -->
        <attr name="progressViewStrokeCap" format="enum">
            <enum name="ROUND" value="1" />
            <enum name="SQUARE" value="2" />
        </attr>

        <!-- 是否显示进度值 -->
        <attr name="progressViewValueShow" format="boolean" />
        <!-- 显示的进度条值文本大小 -->
        <attr name="progressViewValueTextSize" format="dimension" />
        <!-- 显示的进度条值文本颜色 -->
        <attr name="progressViewValueTextColor" format="color" />
        <!-- 显示的进度值是否使用整数形式 -->
        <attr name="progressViewValueInt" format="boolean" />

        <!-- 进度条是否是可以滑动的 -->
        <attr name="progressViewIsSeekBar" format="boolean" />
        <!-- 是否显示滑块 -->
        <attr name="progressViewShowThumb" format="boolean" />
        <!-- 滑块半径 -->
        <attr name="progressViewThumbRadius" format="dimension" />
        <!-- 滑块颜色 -->
        <attr name="progressViewThumbColor" format="color" />
        <!-- 滑块是否显示阴影 -->
        <attr name="progressViewThumbShowShadow" format="boolean" />
        <!-- 滑块阴影颜色 -->
        <attr name="progressViewThumbShadowColor" format="color" />
        <!-- 滑块阴影大小 -->
        <attr name="progressViewThumbShadowSize" format="dimension|integer" />

        <!-- 最大值 -->
        <attr name="android:max" format="integer" />
        <!-- 最小值 -->
        <attr name="android:min" format="integer" />
    </declare-styleable>

    <declare-styleable name="TaggedTextView">
        <!-- 正常文本 -->
        <attr name="normalText" format="string" />
        <!-- 标签文本 -->
        <attr name="tagText" format="string" />
        <!-- 正常文本颜色 -->
        <attr name="normalTextColor" format="color" />
        <!-- 标签文本颜色 -->
        <attr name="tagTextColor" format="color" />
        <!-- 正常文本大小 -->
        <attr name="normalTextSize" format="dimension" />
        <!-- 标签文本大小 -->
        <attr name="tagTextSize" format="dimension" />
        <!-- 标签位置：LEFT(0)/RIGHT(1) -->
        <attr name="tagPosition" format="integer">
            <enum name="left" value="0" />
            <enum name="right" value="1" />
        </attr>
        <!-- 垂直对齐：TOP(0)/CENTER(1)/BOTTOM(2) -->
        <attr name="tagVerticalAlignment" format="integer">
            <enum name="top" value="0" />
            <enum name="center" value="1" />
            <enum name="bottom" value="2" />
        </attr>
    </declare-styleable>
</resources>