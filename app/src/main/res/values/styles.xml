<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!--<item name="android:windowBackground">@android:color/transparent</item> &lt;!&ndash; 背景色透明 &ndash;&gt;
        <item name="android:windowIsTranslucent">true</item> &lt;!&ndash; 是否有透明属性 &ndash;&gt;
        <item name="android:backgroundDimEnabled">false</item> &lt;!&ndash; 背景是否半透明 &ndash;&gt;
        <item name="android:statusBarColor">@android:color/transparent</item> &lt;!&ndash; 状态栏透明 &ndash;&gt;
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item> &lt;!&ndash; activity窗口切换效果 &ndash;&gt;-->
    </style>

    <!-- 修改后的透明主题，确保继承自 AppCompat -->
    <style name="TransparentAppCompatTheme" parent="Theme.AppCompat.Dialog">
        <!-- 设置透明背景 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <!-- 移除标题栏 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 设置浮动，可选，根据需要调整 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 禁止背景变暗效果 -->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Keyboard">
        <item name="android:background">@drawable/drawable_keyboard_bg</item>
        <item name="android:textSize">@dimen/sp_8</item>
        <item name="android:textColor">@color/colorBaseText</item>
        <item name="android:gravity">center</item>
        <item name="layout_constraintDimensionRatio">3:2</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
