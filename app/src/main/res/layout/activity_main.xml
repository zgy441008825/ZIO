<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.zougy.ui.views.CircleProgressView
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:proValue="50"
        app:progressColorEnd="@color/colorAccent"
        app:progressColorStart="@android:color/transparent"
        app:progressRingSize="20" />

    <com.zougy.ui.views.LabelTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        app:labelColor="@color/colorAccent"
        app:labelString=":" />

</LinearLayout>