<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zougy.ui.views.ProgressView
        android:id="@+id/progressLoop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:progressViewBgColor="#AAA"
        app:progressViewColor="@color/colorAccent"
        app:progressViewGradient="#FF0000,#00FF00,#0000FF"
        app:progressViewIsClockwise="false"
        app:progressViewIsLoop="false"
        app:progressViewShowThumb="true"
        app:progressViewSize="@dimen/dp_10"
        app:progressViewStrokeCap="SQUARE"
        app:progressViewStyle="CIRCLE"
        app:progressViewThumbColor="@color/white"
        app:progressViewThumbRadius="@dimen/dp_20"
        app:progressViewThumbShadowColor="@color/colorBaseText"
        app:progressViewThumbShadowSize="1"
        app:progressViewThumbShowShadow="true"
        app:progressViewValue="30"
        app:progressViewValueInt="true"
        app:progressViewValueShow="true"
        app:progressViewValueTextSize="@dimen/dp_100" />

</LinearLayout>